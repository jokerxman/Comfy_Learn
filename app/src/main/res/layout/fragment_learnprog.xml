<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.learnProg.LearnProgFragment">

    <LinearLayout
        android:id="@+id/layoutProgressionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_learnprog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Your Learning Progression"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center" />

        <!-- Progression items will be added here programmatically -->
        <!-- Or, if you use RecyclerView, replace this with a RecyclerView -->

    </LinearLayout>
</ScrollView>