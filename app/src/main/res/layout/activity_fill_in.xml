<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8DC"
    android:padding="16dp">

    <!-- Question and Image -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Complete this word"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imagePrompt"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/questionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/image_tree" />

    <!-- Blank slots for letters -->
    <LinearLayout
        android:id="@+id/letterSlots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagePrompt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/slot1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#D3B68D"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/slot2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#D3B68D"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/slot3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#D3B68D"
            android:gravity="center"
            android:textSize="24sp" />

        <!-- Repeat for additional slots -->
    </LinearLayout>

    <!-- Draggable letter options -->
    <GridLayout
        android:id="@+id/letterOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/letterSlots"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:columnCount="7"
        android:rowCount="4">

        <!-- Letter options go here as TextViews or Buttons -->
    </GridLayout>

</RelativeLayout>
